{
  "name": "@twilio-labs/runtime-helpers",
  "main": "dist/index",
  "typings": "dist/index",
  "version": "0.1.2",
  "description": "A set of common utility code for use in Twilio Functions.",
  "scripts": {
    "clean": "rimraf dist/",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "docs": "typedoc --options typedoc.json",
    "test": "jest",
    "lint": "eslint --ext js .",
    "lint:all": "npm run lint -- --no-ignore",
    "format": "prettier --write .",
    "format:changed": "pretty-quick --branch main",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twilio-labs/runtime-helpers.git"
  },
  "author": "Twilio <open-source@twilio.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/twilio-labs/runtime-helpers/issues"
  },
  "homepage": "https://github.com/twilio-labs/runtime-helpers#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "./**/*.js": {
        "statements": 80,
        "branches": 80
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "@twilio-labs/serverless-runtime-types": "^2.1.1",
    "@types/basic-auth": "^1.1.3",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/tsscmp": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^7.32.0",
    "eslint-config-twilio": "^1.35.1",
    "husky": "^7.0.0",
    "jest": "^27.1.1",
    "moq.ts": "^7.3.4",
    "prettier": "^2.4.0",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "typedoc": "^0.22.3",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "basic-auth": "^2.0.1",
    "ow": "^0.28.1",
    "ts-custom-error": "^3.2.0",
    "tsscmp": "^1.0.6",
    "twilio": "^3.67.2"
  },
  "files": [
    "dist/!(__tests__)",
    "README.md",
    "LICENSE"
  ]
}
